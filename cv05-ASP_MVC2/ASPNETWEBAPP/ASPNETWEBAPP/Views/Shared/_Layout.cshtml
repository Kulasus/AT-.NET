<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>Můj eshop</h1>
    <ul>
        <li><a href="@Url.Action("Index","Home")">Úvodní stránka</a></li>
        <li><a href="@Url.Action("ProductList","Home")">Seznam produktů</a></li>
    </ul>

    <div>
        <ul>
        @foreach(var item in ViewBag.Basket){
            <li>@item</li>
        }
        </ul>
    </div>

    <div>
        @RenderBody()
    </div>

</body>
</html>
