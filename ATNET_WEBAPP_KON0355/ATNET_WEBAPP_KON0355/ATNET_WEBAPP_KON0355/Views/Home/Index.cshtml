@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<style>
    .nav-item::after {
        content: '';
        display: block;
        width: 0px;
        height: 4px;
        background: #ff0000;
        transition: 0.2s;
        margin-top: -10px;
    }

    .nav-item:hover::after {
        width: 100%;
    }


    .nav-link {
        padding: 15px 5px;
        transition: 0.2s;
    }

    .navbar-nav .nav-link {
        color: #000;
        font-weight: bold;
        font-size: 18px;
    }

    .main-text {
        align-content: center;
        text-align: left;
        padding: 2% 25% 0% 25%;
    }
    .main-title {
        text-align: center;
        padding: 5% 25% 0% 25%;
    }
</style>
<html lang="en">
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <title>@ViewData["Title"] - ATNET_WEBAPP_KON0355</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg">

        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="@Url.Action("Index","Home")" class="nav-link">@GlobalizationResources.Resources.Home</a>
            </li>
            <li class="nav-item">
                <a href="@Url.Action("Login","Home")" class="nav-link">@GlobalizationResources.Resources.Data</a>
            </li>
        </ul>
    </nav>

    <div class="main-title">
        <h1 class="title">@GlobalizationResources.Resources.Title</h1>
    </div>
    <div class="main-text"> 
        @foreach(Show s in Show.showsList)
        {
            <ul>
                <li>
                    <p>
                        <strong>@s.Name</strong> @GlobalizationResources.Resources.HomeSen1 <strong>@s.Series</strong> @GlobalizationResources.Resources.HomeSen2 <strong>@s.Episodes</strong> @GlobalizationResources.Resources.HomeSen3
                        @GlobalizationResources.Resources.HomeSen4 <strong>@s.Character</strong>.
                    </p>
                </li>
            </ul>
        }
    </div>
</body>
</html>
